# SumSub Configuration
SUMSUB_APP_TOKEN=your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret
SUMSUB_BASE_URL=https://api.sumsub.com
SUMSUB_LEVEL_NAME=basic-kyc-level
SUMSUB_WEBHOOK_SECRET=your-sumsub-webhook-secret
SUMSUB_WEBHOOK_PATH=/sumsub/webhook

# Optional: Add your own API keys and secrets here
# API_KEY=your_api_key_here

# Transak Configuration
TRANSAK_API_KEY=your_transak_api_key_here
TRANSAK_API_SECRET=your_transak_api_secret_here
TRANSAK_BASE_URL=https://api-gateway-stg.transak.com
TRANSAK_ENVIRONMENT=staging
